BoxLayout:
    orientation: "vertical"
    Image:
        id: liveview_image
        size_hint: 1, 1
        nocache: True
    Video:
        id: video_player
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.3
        Button:
            text: 'Shoot'
            size: (20, 10)
            on_press: app.take_a_photo()
        Button:
            text: 'Gallery'
            size: (20, 10)
            on_press: app.show_gallery()
        Button:
            text: 'LiveView'
            size: (20, 10)
            on_press: app.start_liveview()
